<main>
  <div class="container">
    <div class="row">
      <div class="col-12">
        <h1>Login de usuario</h1>
      </div>
      <div class="col-12 d-flex resultado justify-content-center align-items-center">
        <form method="post" action="/usuarios/login" style="display:grid">
          Escribe tus credenciales:
          <input name="email" id="email" placeholder="email" value="{{body.email}}">
          <input name="password" id="password" placeholder="password">
          <input type="submit" class="btn btn-primary" value="Guardar">
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <p>{{mensaje}}</p>
      </div>
    </div>
  </div>
</main>